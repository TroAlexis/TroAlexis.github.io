extends pages/ui-base/ui-base

block links
    link(rel='stylesheet', href='test.css')

block content
    .main-container
        include modules/forms/text-field/__text-field
        +text-field('email','email', 'Email')
        include modules/forms/toggle/__toggle
        +toggle('specials', 'Получать спецпредложения', false)
        +toggle('specials', 'Получать спецпредложения', true)
        include modules/forms/radio/__radio
        +radio('sex', 'Мужчина', 'male')
        +radio('sex', 'Женщина', 'female')
        include modules/forms/checkbox/__checkbox
        +checkbox('smoking', 'Можно курить')
        include modules/forms/subscription-tf/__subscription-tf
        include modules/forms/like-btn/__like-btn
        +like-btn('12')
        +like-btn('3')
        +like-btn('5')
        +like-btn('1')
        include modules/expandable/__expandable
        +expandable('expandable checkbox list')
            .expandable__content
                +checkbox('breakfast', 'Завтрак')
                +checkbox('desk', 'Письменный стол')
                +checkbox('feeding-chair', 'Стул для кормления')
                +checkbox('children-bed', 'Кроватка')
                +checkbox('tv1', 'Телевизор')
                +checkbox('shampoo1', 'Шампунь')
                +checkbox('tv2', 'Телевизор')
                +checkbox('shampoo2', 'Шампунь')
        include modules/advantage/__advantage
        +advantage('Комфорт', 'Шумопоглощающие стены', '1')
        +advantage('Удобство', 'Окно в каждой из спален', '2')
        +advantage('Уют', 'Номер оснащён камином', '3')
        script(src='modules/forms/like-btn/__like-btn.js')
        script(src='modules/expandable/__expandable.js')
