mixin color-box(content, color)
    .color-box
        .color-box__color(class='color-box__color--' + color)
        h2.color-box__name=content[0]
            p.color-box__hex=[content[1]]

+color-box(['Dark Shade 100%', '#1F2041'], 'main-100')
+color-box(['Dark Shade 75%', '#1F2041'], 'main-75')
+color-box(['Dark Shade 50%', '#1F2041'], 'main-50')
+color-box(['Dark Shade 25%', '#1F2041'], 'main-25')
+color-box(['Dark Shade 5%', '#1F2041'], 'main-5')
+color-box(['Purple', '#BC9CFF'], 'primary')
+color-box(['Green', '#6FCF97'], 'secondary')