mixin header(header_links, is_auth, username)
    header.header
        nav.header__container
            .header__logo
                a.header__logo-link(href='#')
                    include ../../../assets/img/ui/__main-logo-gradient.svg
            ul.header__links
                each link in header_links
                    -const href= link[1]
                    -const text= link[0]
                    -const dropdown= link[2]
                    li.header__item
                        include ../link/link
                        +link(href, text, dropdown)
                unless is_auth
                    include ../btn/--border/btn--border
                    li.header__item
                        +btn-border('Войти', '#')
                    include ../btn/btn
                    li.header__item
                        +btn('Зарегистрироваться', '#', 'header__item-button')
                else
                    .header__vline
                    li.header__item
                        +link('#', username || 'Юлий Цезарь')