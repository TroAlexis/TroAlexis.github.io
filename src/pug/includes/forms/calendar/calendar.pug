mixin input-calendar(headings, container='input-calendar')
    div(class=container)
        if container==='input-calendar'
            h3.heading-3.input-calendar__heading=headings[0]
            h3.heading-3.input-calendar__heading=headings[1]
        else
            h3.heading-3.input-calendar__heading=headings
        button.input-calendar__select.arrival.dropdown__select
            span.input-calendar__arrival ДД.ММ.ГГГГ
        if container==='input-calendar'
            button.input-calendar__select.depart.dropdown__select
                span.input-calendar__depart ДД.ММ.ГГГГ
        .input-calendar__content
            .input-calendar__calendar
                .input-calendar__header
                    .input-calendar__arrow
                    .input-calendar__text
                        span.input-calendar__month
                    .input-calendar__arrow.input-calendar__arrow--forward
                .input-calendar__weekdays
                    each day in ['Пн', 'Вт', 'Ср', 'Чт', 'Пт', 'Сб', 'Вс']
                        span.input-calendar__weekday=day
                .input-calendar__days
                include ../../btn/--bdless/btn--bdless
                +btn-bdless({text: 'применить'})(class='input-calendar__apply')
                +btn-bdless({text: 'очистить'})(class='btn-bdless--disabled input-calendar__clear')