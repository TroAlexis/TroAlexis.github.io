include ../../slideshow/slideshow
include ../../rate-btn/rate-btn
mixin roomcard(roomnumber, lux, price, reviews, rating)
    .roomcard
        +slideshow(['/assets/img/rooms/1.jpeg', '/assets/img/rooms/2.jpeg', '/assets/img/rooms/3' +
        '.jpg', '/assets/img/rooms/4.jpg'])
        .roomcard__container
            .roomcard__wrap
                p.room
                    span.room__num= '№ '
                    span.room__number= roomnumber
                if lux
                    span.room__lux люкс
                p.cost= price + '₽ '
                    span.cost__aday в сутки
            hr
            .roomcard__wrap
                +rate-btn({rating: rating})
                p.reviews.cost= reviews + ' '
                    span.cost__aday Отзывов