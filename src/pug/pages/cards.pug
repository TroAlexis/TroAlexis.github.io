extends ../layout/ui-base

block head
    -const pageTitle = 'Cards';

block content
    main.main._container
        .group.group--1
            include ../includes/cards/room-search/roomsearch
            include ../includes/cards/registration/registration
        .group.group--2
            include ../includes/cards/booking/booking
            +booking('888', '9 990', '2 179', true)
            include ../includes/cards/sign-in/sign-in
        .group.group--3
            include ../includes/forms/calendar/calendar
            +input-calendar(['прибытие', 'выезд'])
            include ../includes/cards/room/room
            +roomcard({roomnum: '888', lux: true, price: '9 990', reviews: 145, rating: 5, urls: [
                Math.ceil(Math.random(19)*10),
                Math.ceil(Math.random(19)*10),
                Math.ceil(Math.random(19)*10),
                Math.ceil(Math.random(19)*10)
                ]})
            +roomcard({roomnum: '840', lux: false, price: '9 900', reviews: 65, rating: 4, urls: [
                    Math.ceil(Math.random(19) * 10),
                    Math.ceil(Math.random(19) * 10),
                    Math.ceil(Math.random(19) * 10),
                    Math.ceil(Math.random(19) * 10)
                ]})

