extends ../layout/ui-base
include ../includes/forms/dropdown/dropdown

block head
    - const pageTitle = 'Form Elements';

block content
    main
        .row
            .col-4
                .element
                    .element__hgroup
                        h3.heading-3 text field
                        h3.heading-3.element__subheading default
                    input.text-field(type='email', name='email' placeholder='Email')
                .element
                    .element__hgroup
                        h3.heading-3 text field
                        h3.heading-3.element__subheading hover / focus
                    input.text-field.focus(type='email', name='email' placeholder='This is pretty awesome')
                .element
                    .element__hgroup
                        h3.heading-3 dropdown
                        h3.heading-3.element__subheading default
                    +dropdown('Сколько гостей', ['взрослые','дети','младенцы'], 'dropdown--apply', 'buttons')
                .element
                    .element__hgroup
                        h3.heading-3 masked text field
                        h3.heading-3.element__subheading default
                    input.text-field.text-field--masked(type='text', name='birthdate', placeholder='ДД.ММ.ГГГГ')
                .element
                    .element__hgroup.form-calendar
                        h3.heading-3 date dropdown
                        h3.heading-3 date dropdown
                    include ../includes/forms/calendar/calendar
                    +input-calendar(['прибытие', 'выезд'])
                .element
                    .element__hgroup
                        h3.heading-3 filter date dropdown
                    +input-calendar('даты пребывания в отеле' ,'dropdown--date')


            .col-4
            .col-4
        .row
            .col-4
            .col-8
