extends ../layout/ui-base

mixin element(headings)
    .element&attributes(attributes)
        .element__hgroup
            each heading in headings
                h3.heading-3&attributes(heading.attributes)=heading.name
        block

block head
    - const pageTitle = 'Form Elements';

block content
    main
        .row.row-1
            .col.col-4
                +element([{name: 'text field'}, {attributes: {class: 'element__subheading'}, name: 'default'}])
                    input.text-field(type='email', name='email' placeholder='Email')
                +element([{name: 'text field'}, {attributes: {class: 'element__subheading'}, name: 'hover / focus'}])
                    input.text-field.focus(type='email', name='email' placeholder='This is pretty awesome')
                +element([{name: 'dropdown'}, {attributes: {class: 'element__subheading'}, name: 'default'}])
                    include ../includes/forms/dropdown/dropdown
                    +dropdown({phText: 'Сколько гостей', selectOptions: ['взрослые', 'дети', 'младенцы'], type: 'dropdown--apply', buttons: true})
                +element([{name: 'masked text field'}, {attributes: {class: 'element__subheading'}, name: 'default'}])
                    input.text-field.text-field--masked(type='text', name='birthdate', placeholder='ДД.ММ.ГГГГ')
                +element([{name: 'date dropdown'}, {name: 'date dropdown'}])(class='form-calendar')
                    include ../includes/forms/calendar/calendar
                    +input-calendar(['прибытие', 'выезд'])
                +element([{name: 'filter date dropdown'}])
                    +input-calendar('даты пребывания в отеле' ,'dropdown--date')
                +element([{name: 'subscription text field'}])
                    include ../includes/forms/subs-form/subs-form
                    +subs-form
            .col.col-4
                +element([{name: 'checkbox buttons'}])(class='checkbox-buttons')
                    include ../includes/forms/checkbox/checkbox
                    +checkbox({id: 'smoking', title: 'Можно курить'})
                    +checkbox({id: 'pets', title: 'Можно с питомцами'})(checked='checked')
                    +checkbox({id: 'guests', title: 'Можно пригласить гостей (до 10 человек)'})(checked='checked')
                +element([{name: 'radio buttons'}])(class='radio-buttons')
                    include ../includes/forms/radio/radio
                    +radio({name: 'sex', value: 'male', title: 'Мужчина'})(checked='checked')
                    +radio({name: 'sex', value: 'female', title: 'Женщина'})
                +element([{name: 'toggle'}])(class='toggle-buttons')
                    include ../includes/forms/toggle/toggle
                    +toggle({id: 'specials-1', title: 'Получать спецпредложения'})(checked='checked')
                    +toggle({id: 'specials-2', title: 'Получать спецпредложения'})
                +element([{name: 'like button'}])(class='like-buttons')
                    include ../includes/forms/like-btn/like-btn
                    +like-btn({count: 2})
                    +like-btn({count: 12})(class='active')
                +element([{name: 'rate button'}])(class='rate-buttons')
                    include ../includes/rate-btn/rate-btn
                    +rate-btn({rating: 4})
                    +rate-btn({rating: 5})
            .col.col-4
                +element([{name: 'range slider'}, {name: '5 000₽ - 10 000₽', attributes: {class: 'element__subheading'}}])(class='range-sliders')
                    include ../includes/forms/range-slider/range-slider
                    +range-slider
                +element([{name: 'rate button'}])(class='main-buttons')
                    include ../includes/btn/btn
                    include ../includes/btn/--border/btn--border
                    include ../includes/btn/--bdless/btn--bdless
                    .row
                        +btn({text: 'click me'})
                        +btn({text: 'click me'})(class='btn--disabled')
                    .row
                        +btn-border({text: 'click me'})
                        +btn-border({text: 'click me'})(class='btn--disabled')
                    .row
                        +btn-bdless({text: 'click me'})
                        +btn-bdless({text: 'click me'})(class='btn-bdless--disabled')
                    +btn({text: 'перейти к оплате'})(class='btn--arrow')
                +element([{name: 'pagination'}])(class='paginations')
                    include ../includes/pagination/pagination
                    +pagination({pagesVis: 3, stopPage: 15, text: '1 – 12 из 100+ вариантов арендыы'})
        .row
            .col.col-4
                +element([{name: 'dropdown'}, {attributes: {class: 'element__subheading'}, name: 'default'}])
                    +dropdown({phText: '2 спальни, 2 кровати...', selectOptions: ['спальни', 'кровати', 'ванные комнаты'], type:'dropdown--auto'})
                +element([{name: 'dropdown'}, {attributes: {class: 'element__subheading'}, name: 'expanded'}])(class='dropdown-expanded')
                    +dropdown({phText: '2 спальни, 2 кровати...', selectOptions: ['спальни', 'кровати', 'ванные ' +
                        'комнаты'], type: 'dropdown--auto'})(class='expanded')
                include ../includes/expandable/expandable
                +expandable({label: 'expandable checkbox list'})
                    +checkbox({id: 'breakfast', title: 'Завтрак'})
                    +checkbox({id: 'desk', title: 'Письменный стол'})(checked='checked')
                    +checkbox({id: 'baby-table', title: 'Стул для кормления'})(checked='checked')
                    +checkbox({id: 'baby-bed', title: 'Кроватка'})(checked='checked')
                    +checkbox({id: 'tv', title: 'Телевизор'})
                    +checkbox({id: 'shampoo', title: 'Шампунь'})
                    +checkbox({id: 'tv-1', title: 'Телевизор'})
                    +checkbox({id: 'shampoo-1', title: 'Шампунь'})
                +expandable({label: 'expandable checkbox list'})(class='expanded')
                    +checkbox({id: 'breakfast', title: 'Завтрак'})
                    +checkbox({id: 'desk', title: 'Письменный стол'})(checked='checked')
                    +checkbox({id: 'baby-table', title: 'Стул для кормления'})(checked='checked')
                    +checkbox({id: 'baby-bed', title: 'Кроватка'})(checked='checked')
                    +checkbox({id: 'tv', title: 'Телевизор'})
                    +checkbox({id: 'shampoo', title: 'Шампунь'})
                    +checkbox({id: 'tv-1', title: 'Телевизор'})
                    +checkbox({id: 'shampoo-1', title: 'Шампунь'})
                include ../includes/advantage/advantage
                +advantage({title: 'Комфорт', description: 'Шумопоглощающие стены', icon: 'comfort'})
                +advantage({title: 'Удобство', description: 'Окно в каждой из спален', icon: 'convenience'})
            .col.col-8
                +element([{name: 'dropdown'}])
                    +dropdown({phText: 'Сколько гостей', selectOptions: ['взрослые', 'дети', 'младенцы'], type: 'dropdown--apply', buttons: true})(class='expanded')
                +element([{name: 'dropdown'}])
                    +dropdown({phText: 'Сколько гостей', selectOptions: ['взрослые', 'дети', 'младенцы'], type:
                            'dropdown--apply', buttons: true})(class='expanded modified')
                .col.col-6
                .col.col-6
                .col.col-12